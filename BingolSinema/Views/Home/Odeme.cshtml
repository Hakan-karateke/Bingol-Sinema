@model BingolSinema.Models.Rezervasyon

@{
    ViewBag.Title = "Ödeme Ekranı";
}

<h2>Ödeme Ekranı</h2>

<form asp-action="Odeme" method="post">
    <div class="form-group">
        <label for="KoltukNumarasi">Koltuk Numarası</label>
        <input type="number" class="form-control" id="KoltukNumarasi" name="KoltukNumarasi" required />
    </div>
    <div class="form-group">
        <label for="Fiyat">Fiyat</label>
        <input type="number" class="form-control" id="Fiyat" name="Fiyat" step="0.01" required />
    </div>
    <button type="submit" class="btn btn-success">Satın Al</button>
</form>
