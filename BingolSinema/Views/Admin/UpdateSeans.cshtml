    <div class="form-group">
        <label asp-for="BaslangicZamani"></label>
        <input asp-for="BaslangicZamani" class="form-control" />
        <span asp-validation-for="BaslangicZamani" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BitisZamani"></label>
        <input asp-for="BitisZamani" class="form-control" />
        <span asp-validation-for="BitisZamani" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeansFiyat"></label>
        <input asp-for="SeansFiyat" class="form-control" />
        <span asp-validation-for="SeansFiyat" class="text-danger"></span>
    </div>
