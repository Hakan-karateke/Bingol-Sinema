@model Salon

@{
    ViewBag.Title = "Update Hall";
}

<h2>Update Hall</h2>

<form asp-action="UpdateSalon" method="post">
    <div class="form-group">
        <label asp-for="SalonAdi"></label>
        <input asp-for="SalonAdi" class="form-control" />
        <span asp-validation-for="SalonAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kapasite"></label>
        <input asp-for="Kapasite" class="form-control" />
        <span asp-validation-for="Kapasite" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
