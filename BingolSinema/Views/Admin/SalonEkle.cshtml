@model BingolSinema.Models.Salon

@{
    ViewData["Title"] = "Salon Ekle";
}

<h2>Salon Ekle</h2>

<form asp-action="SalonEkle" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="SalonAdi" class="control-label"></label>
        <input asp-for="SalonAdi" class="form-control" />
        <span asp-validation-for="SalonAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kapasite" class="control-label"></label>
        <input asp-for="Kapasite" class="form-control" />
        <span asp-validation-for="Kapasite" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
