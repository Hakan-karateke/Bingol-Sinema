@{
    ViewBag.Title = "Yönetici Girişi";
}

<style>
    body {
        background-image: url('https://staticb.yolcu360.com/blog/wp-content/uploads/2022/12/08171135/eskisehir-sinema-salonu-1500x500.jpg'); /* Replace with your image URL */
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .login-container {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 20px;
        border-radius: 10px;
        max-width: 400px;
        margin: 100px auto;
    }

    .form-group label {
        font-size: 1.2em;
    }

    .btn-custom {
        background-color: #007bff;
        border: none;
        font-size: 1.2em;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-custom:hover {
        background-color: #0056b3;
    }

    .btn-signup {
        background-color: #28a745;
        border: none;
        font-size: 1em;
        padding: 5px 10px;
        border-radius: 5px;
        margin-top: 10px;
    }

    .btn-signup:hover {
        background-color: #218838;
    }
</style>

<div class="login-container">
    <h2 class="text-center">Yönetici Girişi</h2>

    <form asp-action="Giris" method="post">
        <div class="form-group">
            <label for="adminAdi">Kullanıcı Adı</label>
            <input type="text" class="form-control" id="adminAdi" name="adminAdi" required />
        </div>
        <div class="form-group">
            <label for="sifre">Şifre</label>
            <input type="password" class="form-control" id="sifre" name="sifre" required />
        </div>
        <button type="submit" class="btn btn-custom btn-block">Giriş Yap</button>
    </form>

    <div class="text-center">
        <a asp-action="AdminOl" class="btn btn-signup">ÜYE Ol</a>
    </div>
</div>
